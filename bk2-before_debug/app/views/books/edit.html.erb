<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<h1>Editing Book</h1>
		<% if @book.errors.any? %>
				<div class="error_explanatation">
					<h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3><br>

					<ul>
					<% @book.errors.full_messages.each do |msg| %>
						<li class="error_messages"><%= msg %></li>
					<% end %>
					</ul>
				</div>
				<% end %>

		<%= render "books/newform", book: @book %>
		<%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
		<%= link_to "Back", books_path, class: "back" %>

	</div>
	<div class="col-md-3"></div>

</div>