<% if @book.errors.any? %>
				<div class="error_explanatation">
					<h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3><br>

					<ul>
					<% @book.errors.full_messages.each do |msg| %>
						<li class="error_messages"><%= msg %></li>
					<% end %>
					</ul> 
				</div>
			<% end %>
<%= form_for(book) do |f| %>
	<div class="field row">
		<%= f.label :Title %>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>

	<div class="field row">
		<%= f.label :Opinion %>
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
	</div>

	<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>